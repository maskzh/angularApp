.grid-operation
  clearfix()
  margin-top 15px
  margin-bottom 15px

  .grid-buttons
    float left

  .grid-search
    width 230px
    float right

.grid-list
  position relative
  margin 30px -15px 0
  min-height 200px

.grid-pagination
  text-align right

.grid-loading, .grid-nodata,.grid-error
  position absolute
  top 0
  width 100%
  height 200px
  text-align center


.grid-loading
  color $jkbs-primary
  font-size 32px
  padding-top 100px

.grid-nodata
  padding-top 120px

.grid-error
  padding-top 120px
