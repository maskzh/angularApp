// btn
.btn:focus, .btn:active:focus, .btn.active:focus, .btn.focus, .btn:active.focus, .btn.active.focus
  outline 0

// nav
.nav-tags
  border-bottom 1px solid $nav-tags-border-color
  > li
    float left
    margin-bottom -1px
    > a
      color $gray-light
      line-height $line-height-base
      border-bottom 3px solid transparent
      border-radius $border-radius-base $border-radius-base 0 0
      &:hover
        border-color $nav-tags-border-color
    &.active > a
      &,
      &:hover,
      &:focus
        color $nav-tags-link-hover-border-color
        background-color $nav-tags-active-link-hover-bg
        border-bottom 3px solid $nav-tags-link-hover-border-color
        cursor default

// pagination
.pagination
  a
    color $text-color

// modal
.modal-content
  border-radius $border-radius-small
  box-shadow none

// alerts
.alert
  .fa
    font-size 1.3em
    margin-right 5px
    vertical-align -1px

// 自定义
body
  background-color #e7e8eb

.wrapper
  .container
    background-color #fff
    border-radius $border-radius-base
    border $jsbs-border
    margin-bottom 50px

.main
  padding 15px
  h2
    font-size 16px
    margin-bottom 30px
  > *
    -webkit-animation-duration 0.5s
    animation-duration 0.5s
    -webkit-animation-fill-mode both
    animation-fill-mode both
    -webkit-animation-name fadeSlideUpIn
    animation-name fadeSlideUpIn
    @-webkit-keyframes fadeSlideUpIn
      from
        -webkit-transform translate3d(0, 30%, 0)
        transform translate3d(0, 30%, 0)
        opacity 0

      100%
        -webkit-transform translate3d(0, 0, 0)
        transform translate3d(0, 0, 0)
        opacity 1


// login
.login-wrapper
  width 100%
  min-height 800px
  padding-top 80px
  overflow hidden
  background-color #364150
  .login-logo
    text-align center
    margin-bottom 50px
  form
    width 400px
    padding 30px
    margin 0 auto
    border-radius $border-radius-base
    background-color #fff

