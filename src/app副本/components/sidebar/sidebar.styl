.sidebar
  margin-left -15px
  margin-right -15px
  .menu
    border-top $jsbs-border
    padding-bottom 10px
    margin-bottom 0
    &:first-child
      border-top-width 0
    dt
      padding 10px 20px 0
      width auto
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      word-wrap normal
      line-height 34px
      color #999
      font-weight normal
      i
        font-size 16px
        margin-right 10px
    dd
      line-height 34px
      &:hover
        background-color #f4f5f9
      &.active
        background-color $jkbs-primary
        a
          color #fff
      a
        display block
        padding 0 0 0 50px
        width auto
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        word-wrap normal
        color #333
        &:hover,&:focus,&:active,&:visited
          text-decoration none
